{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "DATABASE_URL",
    "REDIS_URL"
  ],
  "pipeline": {
    "db:generate": {
      "dependsOn": [
        "^db:generate"
      ]
    },
    "frontend#build": {
      "dependsOn": [
        "shared#build"
      ],
      "outputs": [
        "packages/backend/.next/**"
      ]
    },
    "backend#build": {
      "dependsOn": [
        "db:generate",
        "shared#build"
      ],
      "outputs": [
        "packages/backend/dist/**"
      ]
    },
    "build": {
      "dependsOn": [
        "db:generate",
        "^build"
      ],
      "outputs": [
        "dist/**",
        "client/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "test": {
      "dependsOn": [
        "^test"
      ]
    },
    "start": {
      "dependsOn": [
        "build",
        "^start"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
